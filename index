<!-- love.html -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Love Letter</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <h1>My Love Letter 💌</h1>
        <p id="love-text"></p>
        <a href="index.html" class="btn">Back Home</a>
    </div>
    <script>
        const lines = [
            "From the moment we met, my world changed forever.",
            "Every day with you is a beautiful adventure.",
            "Your smile brightens my darkest days.",
            "I am so grateful for your love and kindness.",
            "Happy anniversary, my love! 💖"
        ];
        let index = 0;
        function showNextLine() {
            if (index < lines.length) {
                document.getElementById("love-text").innerHTML += lines[index] + "<br>";
                index++;
                setTimeout(showNextLine, 2000);
            }
        }
        document.addEventListener("DOMContentLoaded", showNextLine);
    </script>
</body>
</html>

<!-- surprise.html -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Surprise</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <h1>Surprise for You 🎁</h1>
        <p>Click the button for a cute surprise!</p>
        <button onclick="showSurprise()" class="btn">Click Me</button>
        <p id="surprise-message" style="display:none; font-size: 1.5em; margin-top: 20px; color: white;"></p>
        <a href="index.html" class="btn">Back Home</a>
    </div>
    <script>
        function showSurprise() {
            document.getElementById("surprise-message").innerText = "You are my everything! 💕";
            document.getElementById("surprise-message").style.display = "block";
        }
    </script>
</body>
</html>

<!-- styles.css -->
body {
